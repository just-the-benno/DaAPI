<div class="modal-footer">
    <div class="flex-fill"></div>
    <button type="button" @onclick="Cancelor" class="btn btn-secondary">@CancelCaption</button>
    <SendingAwareSubmitFormButton Caption="@SendCaption" ExecutingCaption="@SendingCaption" FormIsSending="@SendingInProgress" FormIsValid="@FormIsValid" />
</div>


@code {

    [Parameter]
    public String CancelCaption { get; set; }

    [Parameter]
    public String SendCaption { get; set; }

    [Parameter]
    public String SendingCaption { get; set; }

    [Parameter]
    public Boolean SendingInProgress { get; set; }

    [Parameter]
    public Boolean FormIsValid { get; set; }

    [Parameter]
    public EventCallback Cancelor { get; set; }
}
