@model LoggedOutViewModel

@{ // set this so the layout rendering sees an anonymous user
    ViewData["signed-out"] = true; }

<div class="login-page flex-fill heigth-auto">
    <div class="d-flex flex-md-row flex-column justify-content-center">

        <div class="card">
            <div class="card-header">
                <h2>Logout</h2>
            </div>
            <div class="card-body login-card-body">
                <p class="login-box-msg">You are now logged out</p>

                @if (Model.PostLogoutRedirectUri != null)
                {
    <div class="d-flex flex-row">
        <div class="d-flex flex-fill"> </div>
        <a class="btn btn-primary" href="@Model.PostLogoutRedirectUri">
            Return to to return
            <span>@Model.ClientName</span> application
        </a>
    </div>}

                @if (Model.SignOutIframeUrl != null)
                {
    <iframe width="0" height="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>}


            </div>
        </div>
    </div>
</div>


@section scripts
{
    @if (Model.AutomaticRedirectAfterSignOut)
    {
<script src="~/js/signout-redirect.min.js"></script>
}
}
